<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.media3.ui.PlayerView
        android:id="@+id/exoplayerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:surface_type="surface_view"
        android:background="@color/black"/>

    <ProgressBar
        android:id="@+id/shorts_player_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView

        android:id="@+id/pause"

        android:visibility="gone"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_100sdp"
        android:elevation="@dimen/_20sdp"

        android:src="@drawable/outline_play_arrow_24"
        app:tint="@color/white"

        app:layout_constraintTop_toTopOf="@id/exoplayerview"
        app:layout_constraintBottom_toBottomOf="@id/exoplayerview"

        app:layout_constraintStart_toStartOf="@id/exoplayerview"
        app:layout_constraintEnd_toEndOf="@id/exoplayerview"


        />




    <com.skyfishjy.library.RippleBackground

        android:id="@+id/btn_download"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"


        android:elevation="@dimen/_4sdp"

        android:visibility="gone"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"



        app:rb_color="@color/primary"
        app:rb_duration="2000"
        app:rb_radius="18dp"
        app:rb_rippleAmount="1"
        app:rb_scale="3">

        <ImageView
            android:id="@+id/download_vid"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/shorts_download" />

    </com.skyfishjy.library.RippleBackground>

</androidx.constraintlayout.widget.ConstraintLayout>
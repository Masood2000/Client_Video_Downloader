<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="8dp"
    android:background="@color/white_changeAble"
    android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            android:gravity="center"
            android:minWidth="0dp"
            android:paddingHorizontal="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jncskd"
            tools:text="Downlaod" />

        <View
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/shimerrColor"
            android:backgroundTint="@color/shimerrColor"
            android:paddingHorizontal="@dimen/_5sdp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jncskd"
            app:roundPercent="0.4" />

        <View
            android:id="@+id/jncskd"
            android:layout_width="match_parent"
            android:layout_height="150dp"


            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:background="@color/shimerrColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_body" />

        <View
            android:id="@+id/ad_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"

            android:adjustViewBounds="true"
            android:background="@color/shimerrColor"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="0.2" />

        <View
            android:id="@+id/kllm"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_17sdp"

            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/shimerrColor"
            android:paddingHorizontal="6dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ad_app_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvAdAttribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/round_corners_2dp"
            android:backgroundTint="@color/shimerrColor"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="AD"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/kllm"
            app:layout_constraintStart_toEndOf="@+id/kllm"
            app:layout_constraintTop_toTopOf="@id/kllm" />

        <View
            android:id="@+id/ad_body"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/shimerrColor"
            android:paddingHorizontal="6dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ad_app_icon"
            app:layout_constraintTop_toBottomOf="@+id/kllm" />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.fragments.HomeFragment">



    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/section_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"

                    >

                    <ImageView
                        android:id="@+id/clear"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:elevation="@dimen/_2sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cross_svgrepo_com"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/linkfield"
                        app:layout_constraintEnd_toEndOf="@id/linkfield"
                        app:layout_constraintHorizontal_bias="0.97"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/linkfield" />


                    <EditText
                        android:id="@+id/linkfield"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_38sdp"

                        android:background="@drawable/pastelink_bg"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:hint="Paste Link Here"
                        android:imeOptions="actionGo"

                        android:includeFontPadding="false"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_40sdp"
                        android:singleLine="true"
                        android:textColor="@color/textHeading"
                        android:textColorHint="#B3353131"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintBottom_toTopOf="@id/downloadbutton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.39"


                        app:layout_constraintWidth_percent="0.93" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pasteText"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:backgroundTint="#FF9100"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="@dimen/_2sdp"
                        android:text="@string/paste"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        app:layout_constraintBottom_toBottomOf="@id/linkfield"
                        app:layout_constraintEnd_toEndOf="@id/linkfield"
                        app:layout_constraintTop_toTopOf="@id/linkfield" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/downloadbutton"

                        android:layout_width="0dp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:backgroundTint="@color/primary"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/popins"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_2sdp"
                        android:text="Download"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:visibility="visible"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/linkfield"
                        app:layout_constraintStart_toStartOf="@id/linkfield"
                        app:layout_constraintTop_toBottomOf="@id/linkfield"

                        app:layout_constraintVertical_bias="0" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_suggested_apps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="gone"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/suggested_websites_bg"

                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_12sdp"

                app:layout_constraintTop_toBottomOf="@id/section_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/suggested_websites"
                        android:textColor="@color/Text"
                        android:textSize="@dimen/_14sdp"



                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_8sdp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginVertical="@dimen/_6sdp"


                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_youtube"


                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:layout_weight="1"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_youtube"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:src="@drawable/ic_fb"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/fb"

                                android:maxLines="1"
                                android:maxWidth="@dimen/_60sdp"

                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"

                                android:textStyle="normal"



                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"



                                android:layout_marginTop="@dimen/_12sdp"


                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_youtube"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_reddit"

                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_weight="1"

                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_reddit"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:src="@drawable/ic_insta"
                                android:layout_marginHorizontal="@dimen/_16sdp"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/insta"
                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"






                                android:maxLines="1"
                                android:textStyle="normal"
                                android:maxWidth="@dimen/_60sdp"
                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"

                                android:layout_marginTop="@dimen/_12sdp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_reddit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_dailymotion"

                            android:layout_weight="1"


                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_dailymotion"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:src="@drawable/ic_dailymotion"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/dailymotion"
                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"


                                android:maxLines="1"
                                android:textStyle="normal"

                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"
                                android:maxWidth="@dimen/_60sdp"
                                android:layout_marginTop="@dimen/_12sdp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_dailymotion"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginVertical="@dimen/_6sdp"


                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_vimeo"


                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:layout_weight="1"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_vimeo"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:src="@drawable/ic_vimeo"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/vimeo"

                                android:maxLines="1"
                                android:maxWidth="@dimen/_60sdp"

                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"

                                android:textStyle="normal"



                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"



                                android:layout_marginTop="@dimen/_12sdp"


                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_vimeo"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_insta"

                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_weight="1"

                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_insta"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:src="@drawable/ic_pin"
                                android:layout_marginHorizontal="@dimen/_16sdp"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/pin"
                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"





                                android:maxLines="1"
                                android:textStyle="normal"
                                android:maxWidth="@dimen/_60sdp"
                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"

                                android:layout_marginTop="@dimen/_12sdp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_insta"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_fb"

                            android:layout_weight="1"


                            android:paddingTop="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_fb"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"

                                android:scaleType="fitXY"
                                android:src="@drawable/ic_reddit"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Reddit"
                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"


                                android:maxLines="1"
                                android:textStyle="normal"

                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"
                                android:maxWidth="@dimen/_60sdp"
                                android:layout_marginTop="@dimen/_8sdp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_fb"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginVertical="@dimen/_6sdp"


                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_google"


                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:layout_weight="1"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_google"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:src="@drawable/logo_twitter"
                                android:tint="@color/blue"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Twitter"

                                android:maxLines="1"
                                android:maxWidth="@dimen/_60sdp"

                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="normal"



                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"



                                android:layout_marginTop="@dimen/_12sdp"


                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_google"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_pin"

                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_weight="1"

                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_pin"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:src="@drawable/logo_tiktok"
                                android:layout_marginHorizontal="@dimen/_16sdp"

                                app:tint="@color/black"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Tiktok"
                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"





                                android:maxLines="1"
                                android:textStyle="normal"
                                android:maxWidth="@dimen/_60sdp"
                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"

                                android:layout_marginTop="@dimen/_12sdp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_pin"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cl_twitch"

                            android:layout_weight="1"


                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:background="@drawable/websites_bg"

                            >
                            <ImageView
                                android:id="@+id/ic_twitch"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"

                                android:src="@drawable/ic_twitch"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                >

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/twitch"
                                android:textColor="@color/Text"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_8sdp"

                                android:maxLines="1"
                                android:textStyle="normal"

                                app:layout_constrainedWidth="true"
                                android:ellipsize="end"
                                android:maxWidth="@dimen/_60sdp"
                                android:layout_marginTop="@dimen/_12sdp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintTop_toBottomOf="@id/ic_twitch"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>





                    </LinearLayout>



                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5"
                 android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/section_1">

                <!-- Heading -->
                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to Use"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    android:layout_gravity="center"
                    android:paddingBottom="16dp" />

                <!-- Instruction Text -->
                <TextView
                    android:id="@+id/instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Copy the link of the video.\n\n2. Paste the video link on the home text bar or click paste.\n\n3. Select the personalized video format category.\n\n4. Download the video and play or share it."
                    android:textSize="16sp"
                    android:lineSpacingExtra="8dp"
                    android:padding="12dp"
                    android:background="#FFFFFF"

                    android:shadowColor="#B0BEC5"
                    android:shadowDx="0"
                    android:shadowDy="4"
                    android:shadowRadius="4"
                    android:elevation="2dp"
                    android:textColor="#424242"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
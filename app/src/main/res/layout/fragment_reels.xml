<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.reels.ReelsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:backgroundTint="@color/icons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/webView"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"

            android:paddingVertical="@dimen/_12sdp"
            >

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/back_svgrepo_com__1_"

                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_4sdp"

                app:layout_constraintHorizontal_bias="0"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cl_link"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:paddingVertical="@dimen/_8sdp"

                android:background="@drawable/bg_web_link"

                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"

                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <ImageView
                    android:id="@+id/web_icon"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"




                    android:src="@drawable/ic_web"

                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_2sdp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/_200sdp"
                    app:layout_constrainedWidth="true"

                    android:text="www.fb.comfdhaskdfashkladfshfkldshafdklhfdskldfhsklafdhdfaslkhdfklafsdh"
                    android:textColor="@color/icons"
                    android:textSize="@dimen/_11ssp"


                    android:layout_marginStart="@dimen/_4sdp"


                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/web_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:scrollbarSize="@dimen/_8sdp"
            app:trackThickness="2.5dp"
            android:indeterminate="true"
            app:indicatorColor="@color/primary"



            app:layout_constraintBottom_toBottomOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
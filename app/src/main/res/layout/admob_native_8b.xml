<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_165sdp"
    android:layoutDirection="ltr"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F000000"
        android:orientation="vertical">

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_5sdp"

            android:layoutDirection="ltr"
            android:paddingTop="@dimen/_3sdp"

            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ifv_ad_call_to_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_media">

            <TextView
                android:id="@+id/ad_attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:background="@drawable/stroke_2dp"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_1sdp"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_1sdp"
                android:text="AD"
                android:textColor="?attr/itemTextColor"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toBottomOf="@id/constraint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ad_headline"
                app:layout_constraintVertical_bias="0.1" />
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:adjustViewBounds="true"
                android:layout_marginStart="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:ellipsize="marquee"
                android:includeFontPadding="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text=""
                android:layout_marginStart="@dimen/_4sdp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_medium"
                app:layout_constrainedWidth="true"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@+id/ad_body"
                app:layout_constraintEnd_toStartOf="@id/ad_attribute"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/ad_app_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />


            <TextView
                android:id="@+id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:alpha="0.6"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/ad_app_icon"
                app:layout_constraintTop_toBottomOf="@+id/ad_headline"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ifv_ad_call_to_action"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"

            android:layout_marginBottom="@dimen/_2sdp"

            android:background="#0085FF"

            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/constraint"
            app:layout_constraintTop_toTopOf="@+id/constraint"
            app:layout_constraintVertical_bias="0.49"
            app:roundPercent="0.5" />

        <TextView
            android:id="@+id/ad_call_to_action"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"

            android:paddingHorizontal="@dimen/_2sdp"
            android:ellipsize="end"
            android:singleLine="true"

            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_medium"
            app:layout_constraintBottom_toBottomOf="@id/ifv_ad_call_to_action"
            app:layout_constraintEnd_toEndOf="@id/ifv_ad_call_to_action"
            app:layout_constraintStart_toStartOf="@id/ifv_ad_call_to_action"
            app:layout_constraintTop_toTopOf="@id/ifv_ad_call_to_action" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.gms.ads.nativead.NativeAdView>

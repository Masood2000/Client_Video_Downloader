<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.VideoCompletedFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admob_parent_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"

        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="vertical"

        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/transparent"


            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/loading_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shimmer_auto_start="true"
                app:shimmer_duration="800"
                app:shimmer_shape="linear">

                <include
                    layout="@layout/shimmer_native_banner_ad_design_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp" />

            </com.facebook.shimmer.ShimmerFrameLayout>


            <FrameLayout
                android:id="@+id/admob_native_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="0dp"

        tools:listitem="@layout/downloaded_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admob_parent_container" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noVid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        android:padding="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admob_parent_container">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/instaAnim"
            android:layout_width="@dimen/_158sdp"
            android:layout_height="@dimen/_156sdp"
            android:background="@drawable/rounded_bg"
            android:padding="@dimen/_2sdp"
            android:paddingVertical="@dimen/_1sdp"
            android:scaleType="centerCrop"
            android:scaleX="1"
            android:scaleY="1"

            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/instaText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17000002"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/novid"
            app:lottie_repeatMode="reverse"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/instaText"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.8"
            android:gravity="center"
            android:includeFontPadding="false"

            android:text="No Videos Found"

            android:textColor="@color/textHeading"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instaAnim" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
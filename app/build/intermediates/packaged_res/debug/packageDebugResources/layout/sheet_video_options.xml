<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sheet_background"

    android:orientation="vertical">




    <ImageView
        android:id="@+id/sheet_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_6sdp"
        android:src="@drawable/ic_sheet_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/action_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_16sdp"
        android:includeFontPadding="true"
        android:visibility="visible"
        android:background="?selectableItemBackground"
        android:padding="@dimen/_12sdp"
        android:text="Play"
        android:textColor="@color/icons"

        app:drawableLeftCompat="@drawable/play_arrow_24px"
        app:drawableTint="@color/icons"
        app:fontFamily="@font/poppins_regular" />


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/_12sdp" />

    <TextView
        android:id="@+id/action_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_16sdp"
        android:includeFontPadding="true"
        android:background="?selectableItemBackground"
        android:padding="@dimen/_12sdp"
        android:text="Share"
        android:textColor="@color/icons"
        app:drawableLeftCompat="@drawable/outline_share_24"
        app:drawableTint="@color/icons"
        app:fontFamily="@font/poppins_regular" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp" />

    <TextView
        android:id="@+id/action_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_16sdp"
        android:includeFontPadding="true"
        android:background="?selectableItemBackground"
        android:padding="@dimen/_12sdp"
        android:text="Delete"
        android:textColor="@color/icons"
        app:drawableLeftCompat="@drawable/ic_delete"
        app:drawableTint="@color/icons"
        app:fontFamily="@font/poppins_regular" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp" />

    <TextView
        android:id="@+id/action_rename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_16sdp"
        android:includeFontPadding="true"
        android:padding="@dimen/_12sdp"
        android:text="Rename"
        android:visibility="gone"
        android:textColor="@color/icons"
        android:background="?selectableItemBackground"
        app:drawableLeftCompat="@drawable/ic_rename"
        app:drawableTint="@color/icons"
        app:fontFamily="@font/poppins_regular" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_rename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp" />

    <TextView
        android:id="@+id/action_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_16sdp"
        android:includeFontPadding="true"
        android:padding="@dimen/_12sdp"
        android:text="Copy Url"
        android:background="?selectableItemBackground"
        android:textColor="@color/icons"
        app:drawableLeftCompat="@drawable/outline_content_copy_24"
        app:drawableTint="@color/icons"
        app:fontFamily="@font/poppins_regular" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp" />

    <TextView
        android:id="@+id/action_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_16sdp"
        android:includeFontPadding="true"
        android:visibility="gone"
        android:padding="@dimen/_12sdp"
        android:background="?selectableItemBackground"
        android:text="Go to Website"
        android:textColor="@color/icons"
        app:drawableLeftCompat="@drawable/ic_goto_website"
        app:drawableTint="@color/icons"
        app:fontFamily="@font/poppins_regular" />

</LinearLayout>
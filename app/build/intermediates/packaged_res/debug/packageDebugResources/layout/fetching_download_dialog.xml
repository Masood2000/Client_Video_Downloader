<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/rounded_background"
    android:layout_height="@dimen/_200sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instaGram"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/instaAnim"
            android:layout_width="@dimen/_118sdp"
            android:layout_height="@dimen/_116sdp"
            android:background="@drawable/rounded_bg"
            android:padding="@dimen/_2sdp"
            android:paddingVertical="@dimen/_1sdp"
            android:scaleType="centerCrop"
            android:scaleX="1"
            android:scaleY="1"

            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/instaText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/finding_video"
            app:lottie_repeatMode="reverse"
            app:lottie_speed="0.5" />

        <TextView
            android:id="@+id/instaText"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.8"
            android:gravity="center"
            android:includeFontPadding="false"

            android:text="Please wait getting Video Details..."

            android:textColor="@color/textHeading"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instaAnim" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>